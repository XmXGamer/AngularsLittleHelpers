{
  "extends": [
    "tslint:recommended",
    "tslint-immutable",
    "tslint-sonarts",
    "tslint-clean-code",
    "tslint-consistent-codestyle",
    "tslint-microsoft-contrib",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "codelyzer",
    "tslint-consistent-codestyle"
  ],
  "rules": {
    "no-redundant-jsdoc": false,
    "no-relative-imports": false,
    "function-name": false,
    "export-name": false,
    "no-parameter-properties": false
  },
  "linterOptions": {
    "exclude": [
      "**/test.ts",
      "**/*.config.js",
      "**/*.conf.js",
      "__mocks__/**/*.*"
    ]
  }
}
